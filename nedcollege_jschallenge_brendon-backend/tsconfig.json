{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2016", 
    "baseUrl": ".",
    "module": "commonjs",
    "esModuleInterop": true,  
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,     
    "strict": true,                          
    "skipLibCheck": true,   
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["*"]
    }  
  }
}
