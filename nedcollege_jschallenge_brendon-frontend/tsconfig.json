{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "*": ["@types/*"]
    },
    "types": ["@nuxt/types", "@nuxtjs/axios", "@types/node", "cypress"]
  },
  "include": ["**/*.tsx"],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
